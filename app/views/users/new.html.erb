<h1 class="text-center text-primary mb-4">Crear Nuevo Usuario</h1>

<div class="container mt-4 shadow-lg p-5 bg-light rounded">
  <!-- Mostrar mensajes flash si existen -->
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <!-- Mostrar errores relacionados al modelo -->
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errores:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Formulario para crear un nuevo usuario -->
  <%= form_with model: @user, local: true, class: "needs-validation" do |form| %>
    <!-- Campo de Email -->
    <div class="mb-4">
      <%= form.label :email, 'Correo Electrónico', class: "form-label fw-bold text-dark" %>
      <%= form.email_field :email, class: "form-control border-primary", placeholder: 'Ejemplo: usuario@example.com' %>
    </div>

    <!-- Campo de Contraseña -->
    <div class="mb-4">
      <%= form.label :password, 'Contraseña', class: "form-label fw-bold text-dark" %>
      <%= form.password_field :password, class: "form-control border-primary", placeholder: 'Ingrese una contraseña' %>
    </div>

    <!-- Campo de Confirmación de Contraseña -->
    <div class="mb-4">
      <%= form.label :password_confirmation, 'Confirmar Contraseña', class: "form-label fw-bold text-dark" %>
      <%= form.password_field :password_confirmation, class: "form-control border-primary", placeholder: 'Confirme la contraseña' %>
    </div>

    <!-- Campo de Rol -->
    <div class="mb-4">
      <%= form.label :role, 'Rol del Usuario', class: "form-label fw-bold text-dark" %>
      <%= form.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "form-select border-primary" %>
    </div>

    <!-- Botones -->
    <div class="text-center">
      <%= form.submit 'Crear Usuario', class: "btn btn-success px-4 py-2 fw-bold" %>
      <%= link_to 'Volver a la Lista de Usuarios', users_path, class: "btn btn-secondary px-4 py-2 fw-bold ms-3" %>
    </div>
  <% end %>
</div>
